{
  "compilerOptions": {
    "lib": ["ESNext"], // versión de javascript a la que se compila
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "rootDir": "./src", // directorio donde están los archivos que escribes
    "outDir": "./dist", // directorio donde deja los archivos compilados
    "strict": false, // permitir o no tipo any
    "sourceMap": true, // genera mapas de archivos js
    "esModuleInterop": true, // facilita importación de módulos (usar import)
    "declaration": true, // genera archivos de definición
    "experimentalDecorators": true, // habilita decoradores para modelos
    "emitDecoratorMetadata": true // habilita decoradores para modelos
  },
  "include": ["src/**/*.ts"] // compilador debe incluir todos los archivos
}
